<section class="post-container">
    {{#each this}}
    <div class="post-header-container">
        <h3 class="comment-header">Comment</h3>
        <h6 class="author-info">-{{user.username}}, {{format_date creation_date}}</h6>
    </div>
    <div class="post-body-container">
        <p class="post-body">{{comment_text}}</p>
        {{#if user.user_id}}
            <input id="delete-comment" type="submit" name="delete-comment" value="Delete!">
        {{/if}}
    </div>
    {{/each}}
</section>