<section class="post-container">
    <a href="/blog/{{blog.blog_id}}">
        <div class="post-header-container">
            <h3 class="post-header">{{blog.title}}</h3>
            <h6 class="author-info">Posted by {{blog.author_name}} on {{blog.post_date}}</h6>
        </div>
        <div class="post-body-container">
            <p class="post-body">{{description}}</p>
        </div>
    </a>
</section>